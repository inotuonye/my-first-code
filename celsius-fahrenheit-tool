def celsius_to_fahrenheit(c):
    return (c * 9/5) + 32

def fahrenheit_to_celsius(f):
    return (f - 32) * 5/9

print("Ike's Temperature Converter")
print("Option 1: Celsius to Fahrenheit")
print("Option 2: Fahrenheit to Celsius")

choice = input("Choose the conversion 1 or 2: ")

if choice == "1":
    c = float(input("Enter temperature in Celsius: "))
    print(f"{c}째C = {celsius_to_fahrenheit(c):.2f}째F")

elif choice == "2":
    f = float(input("Enter temperature in Fahrenheit"))
    print(f"{f}째F = {fahrenheit_to_celsius(f):.2f}째F")

else:
    print("not valid")
